<h2>Fresh burgers!</h2>
<ul class="freshlist">
  {{#each burger}}
  {{#unless devoured}}
    <li class="fresh row">
      <p class="col-md-9">{{id}}. {{burger_name}}</p>
      <button class="devour col-md-3" id={{id}}>Devour It!</button>
    </li>
  {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-md-6">
  <h2>Devoured burgers!</h2>
<ul class="devouredlist">
  {{#each burger}}
  {{#if devoured}}
    <li class="devoured" id={{id}}>
      <p>{{id}}. {{burger_name}}</p>
    </li>
  {{/if}}
  {{/each}}
</ul>